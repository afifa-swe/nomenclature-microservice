          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Register saved token and client info\", function () {",
                  "  var res = pm.response.json();",
                  "  pm.expect(res).to.have.property('data');",
                  "  pm.expect(res.data).to.have.property('access_token');",
                  "  pm.environment.set('access_token', res.data.access_token);",
                  "  pm.environment.set('client_id', res.data.client_id || '');",
                  "  pm.environment.set('client_secret', res.data.client_secret || '');",
                  "  pm.environment.set('base_url', pm.request.url.getHost());",
                  "  pm.environment.set('port', pm.request.url.getPort());",
                  "});"
                ]
              }
            }
          ]
